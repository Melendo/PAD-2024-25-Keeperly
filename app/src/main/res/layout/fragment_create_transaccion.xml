<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.transaccion.CreateTransaccionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- App Icon or Placeholder -->
        <ImageView
            android:id="@+id/transactionIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_transaccion"
            android:background="@drawable/round_shape"
            android:backgroundTint="@color/main_purple"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:scaleType="center" />

        <!-- Transaction Title Input -->
        <EditText
            android:id="@+id/transactionTitleEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/concepto"
            android:background="@drawable/rounded_edit_text"
            android:padding="16dp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@+id/transactionIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="32dp" />

        <!-- Transaction Amount Input -->
        <EditText
            android:id="@+id/transactionAmountEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/cantidad"
            android:background="@drawable/rounded_edit_text"
            android:padding="16dp"
            android:textColor="#000"
            android:inputType="numberDecimal"
            app:layout_constraintTop_toBottomOf="@+id/transactionTitleEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp" />

        <!-- Enum Account Dropdown -->
        <AutoCompleteTextView
            android:id="@+id/accountDropdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/cuenta"
            android:background="@drawable/rounded_edit_text"
            android:padding="16dp"
            android:textColor="#000"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@+id/transactionAmountEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp" />

        <!-- Enum Category Dropdown -->
        <AutoCompleteTextView
            android:id="@+id/categoryDropdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/categor_a"
            android:background="@drawable/rounded_edit_text"
            android:padding="16dp"
            android:textColor="#000"
            android:inputType="none"
            app:layout_constraintTop_toBottomOf="@+id/accountDropdown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp" />

        <!-- Date Field -->
        <EditText
            android:id="@+id/dateField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Fecha"
            android:background="@drawable/rounded_edit_text"
            android:padding="16dp"
            android:textColor="#000"
            android:focusable="false"
            android:inputType="date"
            android:drawableEnd="@drawable/ic_calendar"
            app:layout_constraintTop_toBottomOf="@+id/categoryDropdown"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveTransactionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/guardar_transacci_n"
            android:backgroundTint="@color/main_purple"
            android:textColor="#FFF"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@+id/dateField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancelTransactionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cancelar"
            android:backgroundTint="@color/secondary_purple"
            android:textColor="#FFF"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@+id/saveTransactionButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>