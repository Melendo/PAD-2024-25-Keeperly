<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.presupuestos.CrearPresupuestoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear Presupuesto"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Input Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nombre del presupuesto"
            android:background="@drawable/rounded_edit_text"
            android:padding="16dp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp" />

        <!-- Input Categoría -->
        <Spinner
            android:id="@+id/spCategoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edit_text"
            android:padding="8dp"
            android:entries="@array/categorias_array"
            app:layout_constraintTop_toBottomOf="@+id/etNombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp" />

        <!-- Input Cantidad -->
        <EditText
            android:id="@+id/etCantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Cantidad"
            android:inputType="numberDecimal"
            android:background="@drawable/rounded_edit_text"
            android:padding="16dp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@+id/spCategoria"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp" />

        <!-- Input Fecha de Inicio -->
        <EditText
            android:id="@+id/etFechaInicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Fecha de inicio (YYYY-MM-DD)"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/rounded_edit_text"
            android:padding="16dp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@+id/etCantidad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp" />

        <!-- Input Fecha de Fin -->
        <EditText
            android:id="@+id/etFechaFin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Fecha de fin (YYYY-MM-DD)"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/rounded_edit_text"
            android:padding="16dp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@+id/etFechaInicio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="32dp" />

        <!-- Botones -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/etFechaFin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="32dp">

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar"
                android:backgroundTint="@color/error_red"
                android:textColor="#FFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCrear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Crear"
                android:backgroundTint="@color/success_green"
                android:textColor="#FFF" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
